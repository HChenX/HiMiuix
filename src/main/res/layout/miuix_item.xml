<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MiuixItemStyle"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/miuix_item_icon"
        style="@style/MiuixIconStyle"
        android:layout_width="@dimen/miuix_item_icon"
        android:layout_height="@dimen/miuix_item_icon"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/miuix_item_margin" />

    <com.hchen.himiuix.widget.MiuixTextView
        android:id="@id/miuix_item_text"
        style="@style/MiuixItemTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:maxWidth="@dimen/miuix_item_max_text"
        android:minWidth="@dimen/miuix_item_min_text" />

    <com.hchen.himiuix.widget.MiuixCheckBox
        android:id="@id/miuix_item_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/miuix_item_margin"
        android:button="@drawable/miuix_radio_button"
        android:hapticFeedbackEnabled="false" />
</LinearLayout>