<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/miuix_divider_title"
        style="@style/MiuixDividerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@id/miuix_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/miuix_divider_height"
        android:clickable="false"
        android:focusable="false" />

    <androidx.cardview.widget.CardView
        android:id="@id/miuix_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/miuix_basic_margin"
        android:layout_marginEnd="@dimen/miuix_basic_margin"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/miuix_basic_radius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:id="@id/miuix_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </androidx.cardview.widget.CardView>
</merge>