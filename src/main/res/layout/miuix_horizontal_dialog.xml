<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MiuixAlertDialogStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@id/miuix_dialog_icon"
            style="@style/MiuixIconStyle"
            android:layout_width="@dimen/miuix_dialog_icon"
            android:layout_height="@dimen/miuix_dialog_icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_icon" />

        <TextView
            android:id="@id/miuix_dialog_title"
            style="@style/MiuixDialogTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Test Title" />

        <com.hchen.himiuix.widget.MiuixTextView
            android:id="@id/miuix_dialog_message"
            style="@style/MiuixDialogMessageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Message"
            app:singleLineCenter="true" />

        <LinearLayout
            android:id="@id/miuix_dialog_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/miuix_dialog_divider"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/miuix_dialog_margin"
        android:layout_marginEnd="@dimen/miuix_dialog_margin"
        android:background="@color/miuix_dialog_divider" />

    <LinearLayout
        android:id="@id/miuix_dialog_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" />
</LinearLayout>